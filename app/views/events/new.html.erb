<div class="header">

	<h1 class="mooch">Post Your Event</h1>
	
</div>

<%= form_for @event do |f| %>

<div class="enter">
	
	<p class="info">
		<%= f.text_field :title, class: "data", :placeholder => "Event Title" %>
	</p>

	<p class="info">
		<%= f.text_field :body, class: "data", :placeholder => "Location" %>
	</p>

	<p class="info">
		<%= f.text_field :incentive, class: "data", :placeholder => "Here's What's on the House" %>
	</p>

	<p class="info"> 
		<%= f.submit "Submit", :class => "button" %>
	</p>
</div>

<% end %>
