<h3 class="post">What: <%= @event.title %></h3>
<p class="post">Where: <%= @event.body %></p>
<p class="post">What's on the House: <%= @event.incentive %></p>
<hr>

<% if current_user %>
		<h5 class="post">Post a comment below</h5>
		
		<%= form_for [@event, @comment] do |f| %>

		<div class="comms">		

			<p class="info">
				<%= f.text_area :body, class: "data" %>
			</p>

			<p class="info">
				<%= f.submit "Comment", :class => "button" %>
			</p>

		</div>

		<% end %>
	<% else %>
		<h5><%= link_to 'Login', login_path %> to comment!</h5>
	<% end %>

	<div class ="said">
		<% @event.comments.each do |comment| %>

	<p class="info">
		<%= comment.body %> (<%= comment.user.name %>)
	</p>

	
	<% end %>
</div>

<!-- individual events, specific to current user -->