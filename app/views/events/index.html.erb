<div class="header">

	<h1 class="mooch">Home Is On The House</h1>
	<h3 class="below">List of Events</h3>
	
</div>

<div class="list">
	<ul>
		<%= render @events %>
	</ul>
</div>

<div class="enter">
<%= form_tag(user_events_path, :method=>'post', :multipart => true) do %>

	<p class="info">
		<%= text_field_tag :title, nil, placeholder: 'Title', class: "data" %>
	</p>

	<p class="info">
		<%= text_field_tag :body, nil, placeholder: "Post", class: "data" %>
	</p>

	<p class="info">
		<%= text_field_tag :incentive, nil, placeholder: "On The House", class: "data" %>
	</p>

	<p class="info">
		<%= submit_tag 'Submit', class: "button" %>
	</p>	
</div>

<% end %>

