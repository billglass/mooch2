<div class="header">

	<h1 class="mooch">On The House</h1>
	<h3 class="below">Freedom Awaits. Sign-Up Today</h3>
	
</div>

<%= form_for @user do |f| %>

<div class="enter">
	<p class="info">
		<%= f.text_field :name, class: "data", :placeholder => "Name" %>
	</p>

	<p class="info">
		<%= f.email_field :email, class: "data", :placeholder => "Email" %>
	</p>

	<p class="info">
		<%= f.password_field :password, class: "data", :placeholder => "Password" %>
	</p>

	<p class="info"> 
		<%= f.submit "Submit", :class => "button" %>
	</p>
</div>

<% end %>


